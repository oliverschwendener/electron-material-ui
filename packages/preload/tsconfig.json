{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "baseUrl": "."
    },
    "include": ["src/**/*.ts", "exposed.d.ts", "../../types/**/*.d.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
